                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="3dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="15dp"
                    app:contentPaddingLeft="10dp"
                    app:contentPaddingRight="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <ImageView
                            android:id="@+id/arrowup"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignRight="@+id/username_answer"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="44dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginRight="0dp"
                            android:layout_toRightOf="@+id/answerT"
                            android:src="@drawable/ic_arrow_up" />

                        <ImageView
                            android:id="@+id/arrowdown"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_below="@+id/time_answer"
                            android:layout_alignRight="@+id/username_answer"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="110dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginRight="0dp"
                            android:layout_toRightOf="@+id/answerT"
                            android:src="@drawable/ic_arrow_down" />

                        <TextView
                            android:id="@+id/username_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"


                            android:fontFamily="sans-serif"
                            android:gravity="right"
                            android:text="popular"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/time_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/username_answer"
                            android:layout_marginTop="0dp"
                            android:text="8:00pm"
                            android:textSize="10sp" />

                        <View
                            android:id="@+id/view1"
                            style="@style/Divider"
                            android:layout_width="270dp"
                            android:layout_below="@id/time_answer"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="4dp" />


                        <TextView
                            android:id="@+id/answerT"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/time_answer"
                            android:minHeight="100dp"
                            android:layout_marginTop="6dp"
                            android:padding="5dp"
                            android:text=""
                            android:textSize="15sp" />

                        <View
                            android:id="@+id/view2"
                            style="@style/Divider"
                            android:layout_width="270dp"
                            android:layout_below="@id/answerT"

                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="4dp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/view2"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="-137dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginBottom="10dp"
                            android:drawableLeft="@drawable/ic_report"
                            android:hint="Report" />


                        <TextView
                            android:id="@+id/counter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/answerT"
                            android:layout_below="@+id/arrowup"
                            android:text="0"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="serif-monospace"
                            android:textSize="17sp"
                            android:layout_marginTop="3dp"/>


                    </RelativeLayout>


                </android.support.v7.widget.CardView>


            </RelativeLayout>
