<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="9dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="1dp"

    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="150dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="3dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="15dp"
        app:contentPaddingLeft="10dp"
        app:contentPaddingRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/username_answer"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fontFamily="sans-serif"
                android:gravity="right"
                android:text="popular"

                android:textSize="15sp" />

            <TextView
                android:id="@+id/time_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username_answer"
                android:layout_marginTop="0dp"
                android:text="8:00pm"
                android:textSize="10sp" />

            <View
                android:id="@+id/view"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/time_answer" />

            <TextView
                android:id="@+id/answerT"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginTop="6dp"
                android:background="#dcdbdb"
                android:minHeight="100dp"
                android:padding="5dp"
                android:text="and"
                android:fontFamily="sans-serif-condensed"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/arrowup"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_below="@+id/time_answer"
                android:layout_toRightOf="@+id/answerT"
                android:paddingLeft="10dp"
                android:src="@drawable/ic_arrow_up" />

            <TextView
                android:id="@+id/counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/arrowup"
                android:layout_marginLeft="-11dp"
                android:fontFamily="serif-monospace"
                android:layout_marginTop="-14dp"
                android:layout_toRightOf="@+id/answerT"
                android:paddingLeft="30dp"
                android:text="000" />

            <ImageView
                android:id="@+id/arrowdown"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_below="@+id/counter"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="-13dp"
                android:layout_toRightOf="@id/answerT"
                android:paddingLeft="10dp"
                android:src="@drawable/ic_arrow_down" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

        </RelativeLayout>